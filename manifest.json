{
  "manifest_version": 3,
  "name": "Perfect Insta Post",
  "version": "2.6.0",
  "description": "AI-powered Instagram captions & hashtags generator. Upload photo, get perfect posts instantly!",
  "permissions": [
    "identity",
    "storage"
  ],
  "host_permissions": [
    "https://perfect-insta-extension-production.up.railway.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Perfect Insta Post",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instagram.com/*",
        "https://*.facebook.com/*",
        "https://*.twitter.com/*",
        "https://*.pinterest.com/*",
        "https://*.unsplash.com/*",
        "https://*.pexels.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}